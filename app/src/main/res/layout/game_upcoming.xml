<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_upcoming">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="180dp">
        <TextView
            android:id="@+id/gameDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Sep 03"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/gameTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingTop="13dp"
            android:text="7:00 PM"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="2dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@color/transparentMax" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:paddingTop="150dp"
            android:weightSum="2"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="15dp"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="start"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/team_1_20172018_dark"
                    tools:layout_height="70dp"
                    android:tag="HOME_TEAM_LOGO"/>

                <TextView
                    android:id="@+id/homeTeamRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="sans-serif-light"
                    android:text="26-16-8, 60pts"
                    android:textAlignment="viewStart"
                    android:textColor="#fff"
                    android:textAllCaps="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/homeTeamCity"
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    android:includeFontPadding="false"
                    android:layout_gravity="start"
                    android:text="Home City"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_gravity="start"
                    android:textColor="#fff"
                    android:text="Home Team"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:tag="HOME_TEAM_NAME" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/transparentMax"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Tickets"
                    android:background="#00000000"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:drawableLeft="@android:drawable/ic_btn_speak_now" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="end"
                        android:scaleType="fitEnd"
                        app:srcCompat="@drawable/team_1_20172018_dark"
                        android:textColor="#fff"
                        tools:layout_height="70dp"
                        android:tag="AWAY_TEAM_LOGO" />

                    <TextView
                        android:id="@+id/awayTeamRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="#fff"
                        android:fontFamily="sans-serif-light"
                        android:text="26-16-8, 60pts"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/awayTeamCity"
                        android:layout_width="match_parent"
                        android:layout_height="13dp"
                        android:includeFontPadding="false"
                        android:layout_gravity="end"
                        android:textColor="#fff"
                        android:text="Away City"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif-light"
                        android:tag="AWAY_TEAM_CITY" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_gravity="end"
                        android:text="Away Team"
                        android:textColor="#fff"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:tag="AWAY_TEAM_NAME" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/transparentMax"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/broadcastInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_gravity="end"
                        android:text="BROADCASTS"
                        android:textColor="#fff"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textStyle="bold" />



                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:background="#75000000"
            android:orientation="vertical">
            <TextView
                android:text="@string/top_scorers"
                android:textColor="@color/transparentMax"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:id="@+id/top_home_scorers_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/top_away_scorers_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>